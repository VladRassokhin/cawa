{
    "name": "cawaphp/cawa",
    "description": "Сáша core",
    "keywords": [
        "cawa",
        "core"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "tchiotludo"
        }
    ],
    "autoload": {
        "files": [
            "src/VarDumper/Resources/functions.php"
        ],
        "psr-4": {
            "Cawa\\": "src"
        }
    },
    "require": {
        "php": "~7.0",
        "ext-mbstring": "*",
        "behat/transliterator": "^1.1",

        "cawaphp/cache": "dev-master",
        "cawaphp/core": "dev-master",
        "cawaphp/events": "dev-master",
        "cawaphp/log": "dev-master",
        "cawaphp/intl": "dev-master",
        "cawaphp/uri": "dev-master",


    },
    "require-dev": {
        "phpunit/phpunit": "~5.1",
        "twig/twig": "^1.23"
    },
    "suggest": {
        "twig/twig": "Required for using the twig template engine"
    },
    "scripts": {
        "test": [
            "phpdbg -qrr vendor/bin/phpunit"
        ],
        "test-ci": [
            "phpdbg -qrr vendor/bin/phpunit --verbose --coverage-clover build/logs/clover.xml"
        ],
        "fix" : [
            "php php-cs-fixer.phar fix --dry-run -vvv"
        ],
        "fix-dry" : [
            "php php-cs-fixer.phar fix --dry-run -vvv"
        ],
        "cs" : [
            "phpcs --standard=PSR2 src/"
        ],
        "cbf" : [
            "phpcbf --standard=PSR2 src/"
        ]
    }
}
